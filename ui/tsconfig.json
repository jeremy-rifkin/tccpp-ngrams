{
    "include": ["**/*.js", "**/*.ts"],
    "exclude": ["**/*.d.ts"],
    "compilerOptions": {
        "target": "esnext",
        "module": "es2015",
        "moduleResolution": "Bundler",
        "strict": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "strictPropertyInitialization": false,
        "noImplicitOverride": true,
        "outDir": "build/server",
        "esModuleInterop": true,
        "incremental": true,
        "sourceMap": true
    }
}
